{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "Federated Human Data CEGA Submission Interface API",
    "description" : "A proposal for interfacing with CEGA as part submission workflow of the Federated Human Data project Work Package 2.",
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version" : "0.0.1-alpha"
  },
  "servers" : [ {
    "url" : "https://cega.api.com/"
  } ],
  "paths" : {
    "/submit/file/{fileID}": {
      "get": {
        "description": "Retrieve files from CEGA",
        "operationId": "retrieveFiles",
        "parameters": [
          {
            "name": "fileID",
            "in": "path",
            "required": true,
            "description": "The EGAF file id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/File"
                }
              }
            }
          },
          "404": {
            "description": "File not found"
          }
        }
      },
      "delete": {
        "responses": {
          "201" : {
            "description": "Accepted"
          }
        }
      }
    },
    "/archive/file": {
      "post" : {
        "description": "Archive a file",
        "operationId": "archiveFile",
        "responses": {
          "201": {
            "description": "Accepted"
          }
        }
      }
    }
  },
  "components" : {
    "schemas": {
      "File": {
        "type": "object",
        "properties": {
          "user": {
            "type": "string"
          },
          "fileSize": {
            "type": "integer"
          },
          "fileID": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }

  }
}